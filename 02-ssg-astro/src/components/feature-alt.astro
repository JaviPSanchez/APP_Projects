---
import Badge from '@components/ui/badge.astro'
import { Picture } from 'astro:assets'
import FeatureImg1 from '../assets/features/5.png'
import FeatureImg2 from '../assets/features/2.png'
import { Icon } from 'astro-icon/components'
import Link from '@components/ui/link.astro'

const { nomargin } = Astro.props
---

<div
	class:list={['mx-auto flex max-w-4xl flex-col items-center justify-center', !nomargin && 'mt-24']}
>
	<Badge color="white">HOW CAN I HELP YOU?</Badge>
	<h2 class="mt-4 text-center text-4xl font-bold text-light100 lg:text-5xl lg:tracking-tight">
		Supercharge Your Decisions
	</h2>
	<p class="mt-4 text-center text-lg text-slate-400 [text-wrap:pretty]">
		Unlock your team's true potential with our state-of-the-art SaaS platform. From intelligent task
		management to real-time top-notch data security, we have everything you need to streamline your
		workflows and achieve high productivity.
	</p>
</div>

<div class="grid py-10 md:grid-cols-2">
	<div class="grid w-2/3 place-items-center">
		<Picture src={FeatureImg1} alt="Feature Image" formats={['avif', 'webp']} loading="lazy" />
	</div>

	<div class="grid place-items-center">
		<div
			class="mt-6 flex max-w-lg flex-col items-center justify-center md:flex md:flex-col md:items-start md:justify-start"
		>
			<Badge color="white" class="-ml-px">Simplified Workflows</Badge>

			<h3 class="mt-4 text-2xl font-medium text-light100 [text-wrap:balance]">
				Experience the Ultimate Boost in Productivity with Our Intuitive Platform
			</h3>
			<p class="mt-4 text-slate-400 [text-wrap:balance]">
				Streamline your tasks and collaborate seamlessly with our cutting-edge SaaS startup
				platform. Unlock the potential of your team and take productivity to new heights.
			</p>

			<ul class="mt-6 grid gap-y-4 text-left">
				<li class="flex items-center gap-3 text-yellow50">
					<Icon name="ph:check-circle-fill" class="h-5 w-5" />

					<span class="text-sm">Intelligent Task Management</span>
				</li>

				<li class="flex items-center gap-3 text-yellow50">
					<Icon name="ph:check-circle-fill" class="h-5 w-5" />

					<span class="text-sm">Real-time Data</span>
				</li>

				<li class="flex items-center gap-3 text-yellow50">
					<Icon name="ph:check-circle-fill" class="h-5 w-5" />

					<span class="text-sm">RGPD compliance Security & Privacy</span>
				</li>
			</ul>
