---
import Container from '@components/container.astro'
import { Icon } from 'astro-icon/components'
import Link from './ui/link.astro'

const { margin, visible } = Astro.props

const footermenu = {
	company: [
		{
			title: 'Blog',
			path: '/blog'
		},
		{
			title: 'Contact',
			path: '/contact'
		}
	]
}
---

<footer class:list={['rounded-t-[60px] py-6', margin && 'mt-12', visible && 'hidden']}>
	<Container>
		<div class="my-2">

			<div class="flex w-full flex-col items-center justify-center child:mb-4 ">
				<a
				href="/"
				class="focus-visible:shadow-outline-indigo mb-6 flex items-center rounded-full px-6 text-lg transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2"
				><span class="font-bold text-light100">Atalaya</span><span class="font-bold text-yellow50"
				>Digital</span
				>
			</a>
			<Link
			href="/contact"
			class="flex items-center justify-center gap-1 bg-yellow50 hover:bg-yellow40"
			rel="noopener"
			>
			Subscribe
		</Link>
		<div class="flex gap-10">
			{
				footermenu.company.map((item) => (
					<a href={item.path || '#'} class="py-2 text-sm text-slate-600 hover:text-yellow50">
							{item.title}
						</a>
					))
				}
			</div>
			<div class="mt-4 flex items-center gap-6">
				<a
				href="https://twitter.com/AtalayaDev"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-slate-200 text-slate-500 hover:bg-yellow40 hover:text-light400"
				>
				<Icon name="bx:bxl-twitter" class="h-4 w-4" />
				<span class="sr-only">Twitter or X</span></a
				>
				<a
				href="https://www.linkedin.com/in/javierpalominosanchez/"
				target="_blank"
					rel="noopener noreferrer"
					class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-slate-200 text-slate-500 hover:bg-yellow40 hover:text-light400"
					>
					<Icon name="bx:bxl-linkedin-square" class="h-4 w-4" /><span class="sr-only">Linkedin</span
						></a
						>
					</div>
				</div>
			</Container>
			
			<div class="">
				<Container>
					<p class="text-center text-sm text-slate-600 [text-wrap:balance]">
						Copyright © {new Date().getFullYear()} AtalayaDigital. All rights reserved.
					</p>
					<p class="mt-2 text-center text-xs text-slate-600">
						<a href="/terms" class="hover:text-yellow40"> Terms</a> ・ <a
						href="/privacy"
						class="hover:text-yellow40"
						>
						Privacy</a
						>
					</p>
				</Container>
			</div>
	</div>
</footer>
